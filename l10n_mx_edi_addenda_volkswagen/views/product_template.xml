<odoo>
    <record id="view_product_template_form_inherit_addenda_vw" model="ir.ui.view">
        <field name="name">product.template.form.inherit.addenda.vw</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//notebook//page[@name='invoicing']//group[@name='accounting']"
                position="inside"
            >
                <group string="VW Product Reference">
                    <field name="vw_ref" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
