<odoo>

   	<record id="ol_exception_stock_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock_exception.view_picking_form" />
        <field name="arch" type="xml">
            <field name="ignore_exception" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="invisible">state not in ('waiting','confirmed','assigned','done')</attribute>
            </field>
        </field>
    </record>

</odoo>
