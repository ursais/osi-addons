<odoo>

    <!-- FSM Features Tree View -->
    <record id="fsm_mobile_feature_tree_view" model="ir.ui.view">
        <field name="name">fsm.mobile.feature.mapping.tree.view</field>
        <field name="model">fsm.mobile.feature.mapping</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- FSM Features Form View -->
    <record id="fsm_mobile_feature_view" model="ir.ui.view">
        <field name="name">fsm.mobile.feature.mapping.view</field>
        <field name="model">fsm.mobile.feature.mapping</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="set_to_draft"
                        type="object"
                        class="oe_highlight"
                        states="active"
                        string="Set To Draft"
                    />
                    <button
                        name="set_to_active"
                        type="object"
                        class="oe_highlight"
                        states="draft"
                        string="Active"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="company_id" invisible="True" />
                        <field name="installed_module_ids" widget="many2many_tags" />
                    </group>
                    <notebook>
                        <page name="mapping_page" string="Group Access Rights">
                            <field name="feature_line_ids">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="group_ids" widget="many2many_tags" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fsm_mobile_features" model="ir.actions.act_window">
        <field name="name">Field Service Mobile Feature Mapping</field>
        <field name="res_model">fsm.mobile.feature.mapping</field>
        <field name="view_id" ref="fsm_mobile_feature_tree_view" />
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="menu_fsm_features"
        name="FSM Mobile Features"
        action="action_fsm_mobile_features"
        parent="fieldservice.config"
        groups="base.group_user"
        sequence="30"
    />

</odoo>
