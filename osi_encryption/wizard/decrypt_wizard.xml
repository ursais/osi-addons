<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="decrypt_lines_wizard_view" model="ir.ui.view">
        <field name="name">Decrypt/Unsanitize Wizard</field>
        <field name="model">decrypt.lines.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="show_key" invisible="1" />
                        <field name="show_file_location" invisible="1" />
                        <field name="key" attrs="{'invisible': [('show_key', '=', False)]}" />
                        <field name="create_csv" attrs="{'invisible': [('show_file_location', '=', False)]}" />
                        <field name="file_location" attrs="{'invisible': ['|', ('show_file_location', '=', False), ('create_csv', '=', False)]}" />
                    </group>
                    <group>
                        <field name="char_line_ids">
                            <tree string="Lines to Decrypt" editable="bottom">
                                <field name="table_id" optional="hide" />
                                <field name="name" optional="show" />
                                <field name="model" optional="show" />
                                <field name="included_char_column_ids" widget="many2many_tags" optional="show" />
                                <field name="num_records" optional="show" />
                                <field name="line_action" optional="show" />
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="decrypt_unsanitize_char_data" type="object" string="Decrypt" class="btn-primary" attrs="{'invisible': [('show_key', '=', False),('show_file_location', '=', True)]}" />
                    <button name="decrypt_unsanitize_char_data" type="object" string="Desanitize" class="btn-primary" attrs="{'invisible': [('show_key', '=', True),('show_file_location', '=', False)]}" />
                    <button name="decrypt_unsanitize_char_data" type="object" string="Decrypt and Desanitize" class="btn-primary" attrs="{'invisible': ['|',('show_key', '=', False),('show_file_location', '=', False)]}" />
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>