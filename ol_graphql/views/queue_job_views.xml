<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_queue_job_form" model="ir.ui.view">
        <field name="name">ol_queue_job.job.form</field>
        <field name="model">queue.job</field>
        <field name="inherit_id" ref="queue_job.view_queue_job_form"/>
        <field name="arch" type="xml">
            <field name="uuid" position="after">
                <field name="graphql_queue_id"/>
                <field name="transaction_id"/>
            </field>
        </field>
    </record>
    <record id="view_queue_job_tree" model="ir.ui.view">
        <field name="name">ol_queue_job.job.tree</field>
        <field name="model">queue.job</field>
        <field name="inherit_id" ref="queue_job.view_queue_job_tree"/>
        <field name="arch" type="xml">
            <field name="uuid" position="after">
                <field name="graphql_queue_id"/>
                <field name="transaction_id"/>
            </field>
        </field>
    </record>
    <record id="view_queue_job_search" model="ir.ui.view">
        <field name="name">ol_queue_job.job.search</field>
        <field name="model">queue.job</field>
        <field name="inherit_id" ref="queue_job.view_queue_job_search"/>
        <field name="arch" type="xml">
            <field name="uuid" position="after">
                <field name="graphql_queue_id"/>
                <field name="transaction_id"/>
            </field>
            <filter name="group_by_exc_message" position="after">
                <filter name="group_by_transaction_id" string="Transaction ID" context="{'group_by': 'transaction_id'}" />
            </filter>
        </field>
    </record>
</odoo>