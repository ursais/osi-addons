<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="invoice_report_product_code_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//th[@name='th_description']" position="after">
            <th name="th_sh_product_code" class="text-end">Customer Product Code</th>
            <th name="th_sh_product_name" class="text-end">Customer Product Name</th>
        </xpath>
        <xpath expr="//td[@name='account_invoice_line_name']" position="after">
            <td name="td_sh_product_code" class="text-end"><span t-field="line.sh_line_customer_code" /></td>
            <td name="td_sh_product_name" class="text-end"><span t-field="line.sh_line_customer_product_name" /></td>
        </xpath>
    </template>
</odoo>
