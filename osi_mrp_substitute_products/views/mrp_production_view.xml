<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.sub.product</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="context">{'default_type': 'product', 'bom_id': parent.bom_id, 'product_id': product_id}</attribute>
            </xpath>
            <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='product_id']" position="after">
                <field name="is_substitute_product"/>
            </xpath>
        </field>
    </record>
</odoo>
