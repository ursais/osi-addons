<odoo noupdate="1">

    <record id="compute_hot_ar_cron" model="ir.cron">
        <field name="name">Compute Hot AR</field>
        <field name="model_id" ref="account.model_account_move" />
        <field name="state">code</field>
        <field name="code">model._update_hot_ar_invoices()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(hour=00, minute=1, second=0)).strftime('%Y-%m-%d %H:%M:%S')" />
        <field name="active" eval="True" />
    </record>

</odoo>
