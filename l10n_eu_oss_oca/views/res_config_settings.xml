<odoo>
    <record id="res_config_settings_view_form_l10n_eu_oss_oca" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n.eu.oss.oca</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <setting id="eu_service" position="after">
                <setting
                    id="l10n_eu_oss_oca"
                    string="EU OSS OCA"
                    help="Apply EU taxes regarding OSS"
                >
                    <div class="mt8">
                            <button
                            name="%(l10n_eu_oss_oca_wizard_action)d"
                            icon="fa-arrow-right"
                            type="action"
                            string="Add new taxes"
                            class="btn-link"
                        />
                        </div>
                </setting>
            </setting>
        </field>
    </record>
</odoo>
