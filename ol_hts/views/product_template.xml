<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add it to the template view -->
    <record id="ol_hts.template_only_view" model="ir.ui.view">
        <field name="name">ls.hts.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="detailed_type" position="after">
                <field name="hts_code_id" readonly="1"/>
            </field>
        </field>
    </record>

    <!-- Add menu item for "HTS code" -->
    <record model="ir.actions.act_window" id="product_hts_codes">
        <field name="name">HTS Codes</field>
        <field name="context">{}</field>
        <field name="res_model">product.hts</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="product_hts_codes"
        id="menu_product_hts_codes"
        name="HTS Codes"
        parent="sale.prod_config_main"
        sequence="10"
        groups="sales_team.group_sale_salesman"
    />

</odoo>
