            <th class="text-right" groups="sale.group_discount_per_so_line">Disc.</th>
        </xpath>
        <xpath expr="//tbody[hasclass('invoice_tbody')]//tr//td[4]" position="replace">
            <td class="text-right" groups="sale.group_discount_per_so_line"><span t-field="l.discount_amt"/></td>
        </xpath>
    </template>

