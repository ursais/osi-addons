<odoo noupdate="1">

    <record id="server_action_rebuild_mrp_component_product_variant" model="ir.actions.server">
        <field name="name">Rebuild BOM from Scaffolding</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="groups_id" eval="[(4, ref('ol_mrp_plm.group_bypass_bom_restiction'))]"/>
        <field name="state">code</field>
        <field name="code">
for variant in records:
    variant._reset_variant_bom_with_master_bom()
        </field>
    </record>


    <record id="server_action_rebuild_mrp_component_product_template" model="ir.actions.server">
        <field name="name">Rebuild BOM from Scaffolding</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="groups_id" eval="[(4, ref('ol_mrp_plm.group_bypass_bom_restiction'))]"/>
        <field name="state">code</field>
        <field name="code">
for template in records:
    template._reset_all_variants_bom_with_master_bom()
        </field>
    </record>

</odoo>
