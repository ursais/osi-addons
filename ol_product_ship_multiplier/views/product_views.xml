<odoo>
    <record id="product_template_last_purchase_info_inherit_ol_product" model="ir.ui.view">
        <field name="name">product.template.form.ol.product.ship.multiplier</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="purchase_last_price_info.product_template_last_purchase_info_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='last_purchase_info']//field[@name='last_purchase_price']" position="after">
                <field name="carrier_multiplier_id"/>
                <field name="default_shipping_cost"/>
            </xpath>
        </field>
    </record>
</odoo>