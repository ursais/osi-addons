<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">ol_uuid.view_partner_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="ol_base.view_partner_form"/>
        <field name="arch" type="xml">
            <page name="onlogic_info" position="inside">
                <group>
                    <field name='uuid' readonly="1"/>
                </group>
            </page>
        </field>
    </record>
    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">ol_uuid.res.partner.select</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name='uuid' readonly="1"/>
            </field>
        </field>
    </record>
</odoo>