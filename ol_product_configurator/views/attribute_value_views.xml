<odoo>
    <!-- Form View -->
    <record id="product_attribute_value_form_view_inherit_ol_pro_config" model="ir.ui.view">
        <field name="name">product.config.product.attribute.value.form.view</field>
        <field name="model">product.attribute.value</field>
        <field name="inherit_id" ref="product_configurator.product_attribute_value_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group//group//field[@name='product_id']" position="before">
                <field name="company_id" />
            </xpath>
        </field>
    </record>

    <!-- Tree View -->
    <record id="product_attribute_value_list_inherit_ol_pro_config" model="ir.ui.view">
        <field name="name">product.attribute.value.list</field>
        <field name="model">product.attribute.value</field>
        <field name="inherit_id" ref="product.product_attribute_value_list" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="company_id" />
            </field>
        </field>
    </record>

</odoo>