<odoo>
	<data>
		<record id="view_api_clients_tree" model="ir.ui.view">
			<field name="name">ol_api.view_api_clients_tree</field>
			<field name="model">api.client</field>
			<field name="arch" type="xml">
				<tree string="API Clients" create="false" default_order="name asc">
					<field name="name"/>
					<field name="api_key" readonly="1"/>
				</tree>
			</field>
		</record>
		<record id="view_api_clients_form" model="ir.ui.view">
			<field name="name">ol_api.view_api_clients_form</field>
			<field name="model">api.client</field>
			<field name="arch" type="xml">
				<form string="API Clients" create="false" class="o_sale_order">
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="display_name" readonly="1"/>
							</h1>
						</div>
						<group name="top_grp">
							<field name="name"/>
							<field name="api_key"/>
							<field name="description"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="action_menu_api" model="ir.actions.act_window">
			<field name="name">API</field>
			<field name="res_model">api.client</field>
			<field name="view_mode">tree,form</field>
			<field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('ol_api.view_api_clients_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('ol_api.view_api_clients_form')})]"/>
		</record>
		<!-- Top level menu item -->
		<menuitem name="API" id="api_menu_root" action="action_menu_api" web_icon="fa fa-podcast,#ffffff,#1f9cb9" groups="ol_base.dev_team"/>
		<menuitem id="api_clients_menu" parent="ol_api.api_menu_root" name="API Clients" action="action_menu_api" sequence="1" groups="ol_base.dev_team"/>
	</data>
</odoo>