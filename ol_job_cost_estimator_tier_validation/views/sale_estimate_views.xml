<odoo>

    <record
        id="ol_job_cost_estimator_tier_validation_sale_estimate_search"
        model="ir.ui.view"
    >
        <field name="name">sale.estimate.job.tier.validation.inherit.search</field>
        <field name="model">sale.estimate.job</field>
        <field
            name="inherit_id"
            ref="job_cost_estimate_customer.sale_estimate_search_view_job"
        />
        <field name="arch" type="xml">
            <filter name="payment_term" position="after">
                <separator />
                <filter
                    name="needs_review"
                    string="Needs my Review"
                    domain="[('reviewer_ids','in',uid), ('state', 'not in', ['done', 'cancel','to approve'])]"
                    help="My estimates to review"
                />
                <filter
                    name="tier_validated"
                    string="Validated"
                    domain="[('validated', '=', True)]"
                    help="Estimates validated and ready to be confirmed"
                />
            </filter>
        </field>
    </record>

    <record
        id="ol_job_cost_estimator_tier_validation_sale_estimate_tree"
        model="ir.ui.view"
    >
        <field name="name">sale.estimate.job.tier.validation.inherit.tree</field>
        <field name="model">sale.estimate.job</field>
        <field
            name="inherit_id"
            ref="job_cost_estimate_customer.view_sale_estimate_tree_job"
        />
        <field name="arch" type="xml">
            <tree position="inside">
                <field
                    name="validation_status"
                    widget="badge"
                    optional="hide"
                    decoration-info="validation_status == 'pending'"
                    decoration-danger="validation_status == 'rejected'"
                    decoration-success="validation_status == 'validated'"
                />
            </tree>
        </field>
    </record>

    <record id="job_cost_estimate_customer.action_estimate_job" model="ir.actions.act_window">
        <field name="groups_id" eval="[(4, ref('product.group_sale_pricelist'))]" />
    </record>

</odoo>
