<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Product Attributes -->
    <record
        id="product_template_attribute_value_view_form_is_qty_required"
        model="ir.ui.view"
    >
        <field
            name="name"
        >product.template.attribute.value.view.form.weight.extra</field>
        <field name="model">product.template.attribute.value</field>
        <field
            name="inherit_id"
            ref="product.product_template_attribute_value_view_form"
        />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button
                        name="update_attribute_value_qty"
                        type="object"
                        string="Update Qty"
                        groups="product_configurator.group_product_configurator_manager"
                        invisible="not is_qty_required"
                    />
                </div>
            </xpath>
            <xpath expr="//field[@name='price_extra']" position="after">
                <field
                    name="is_qty_required"
                    groups="product_configurator.group_product_configurator_manager"
                    invisible="1"
                />
                <field
                    name="default_qty"
                    required="is_qty_required"
                    invisible="not is_qty_required"
                    groups="product_configurator.group_product_configurator_manager"
                />
                <field
                    name="maximum_qty"
                    required="is_qty_required"
                    invisible="not is_qty_required"
                    groups="product_configurator.group_product_configurator_manager"
                />
            </xpath>
            <field name="exclude_for" position="after">
                <field
                    name="attribute_value_qty_ids"
                    widget="one2many"
                    mode="tree"
                    invisible="not is_qty_required"
                    groups="product_configurator.group_product_configurator_manager"
                />
            </field>
        </field>
    </record>

    <record
        id="product_template_attribute_value_view_tree_is_qty_required"
        model="ir.ui.view"
    >
        <field
            name="name"
        >product.template.attribute.value.view.tree.weight.extra</field>
        <field name="model">product.template.attribute.value</field>
        <field
            name="inherit_id"
            ref="product.product_template_attribute_value_view_tree"
        />
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <field name="price_extra" position="after">
                <field name="is_qty_required" invisible="1" />
                <field name="default_qty" invisible="not is_qty_required" />
                <field name="maximum_qty" invisible="not is_qty_required" />
            </field>
        </field>
    </record>

</odoo>
