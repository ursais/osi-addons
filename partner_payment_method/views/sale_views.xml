<?xml version="1.0"?>
<odoo>

    <record id="view_order_form_payment_method" model="ir.ui.view">
        <field name="name">order.form.payment.method</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name ='payment_term_id']" position="after">
                    <field name="payment_method" widget="selection" attrs="{'readonly':True}"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="view_order_form_payment_method_editable" model="ir.ui.view">
        <field name="name">order.form.payment.method.editable</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="partner_payment_method.view_order_form_payment_method"/>
        <field name="groups_id" eval="[(6, 0, [ref('sales_team.group_sale_manager')])]"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name ='payment_method']" position="attributes">
                    <attribute name="readonly">False</attribute>
                </xpath>
            </data>
        </field>
    </record>

</odoo>
