<?xml version="1.0"?>
<odoo>

    <record id="invoice_form_payment_method" model="ir.ui.view">
        <field name="name">invoice.form.payment.method</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name ='payment_term_id']" position="after">
                    <field name="payment_method" widget="selection" attrs="{'readonly':True}"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="invoice_form_payment_method_editable" model="ir.ui.view">
        <field name="name">invoice.form.payment.method.editable</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="partner_payment_method.invoice_form_payment_method"/>
        <field name="groups_id" eval="[(6, 0, [ref('account.group_account_user'),ref('account.group_account_manager'),ref('account.group_account_invoice')])]"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name ='payment_method']" position="attributes">
                    <attribute name="readonly">False</attribute>
                </xpath>
            </data>
        </field>
    </record>

    <record id="invoice_supplier_form_payment_method" model="ir.ui.view">
        <field name="name">invoice.supplier.form.payment.method</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name ='date_due']" position="after">
                    <field name="payment_method" widget="selection" attrs="{'readonly':True}"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="invoice_supplier_form_payment_method_editable" model="ir.ui.view">
        <field name="name">invoice.supplier.form.payment.method.editable</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="partner_payment_method.invoice_supplier_form_payment_method"/>
        <field name="groups_id" eval="[(6, 0, [ref('account.group_account_user'),ref('account.group_account_manager'),ref('account.group_account_invoice')])]"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name ='payment_method']" position="attributes">
                    <attribute name="readonly">False</attribute>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
