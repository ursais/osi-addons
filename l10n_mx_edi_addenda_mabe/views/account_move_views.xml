<odoo>
    <record id="view_account_move_form_inherit_addenda_mabe" model="ir.ui.view">
        <field name="name">account.move.form.inherit.addenda.mabe</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Addenda">
                    <group>
                        <field invisible="1" name="mabe_flag" />
                        <field
                            name="mabe_reference1"
                            string="Referencia 1"
                            invisible="not mabe_flag"
                        />
                        <field
                            name="mabe_reference2"
                            string="Referencia 2"
                            invisible="not mabe_flag"
                        />
                        <field
                            name="mabe_amount_with_letter"
                            string="Importe con letra"
                            invisible="not mabe_flag"
                        />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
