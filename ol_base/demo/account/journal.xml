<odoo>
  <!-- Basic US Journals -->
  <record id="operating_us" model="account.journal">
    <field name="name">11010 Operating Account</field>
    <field name="type">bank</field>
    <field name="code">11010</field>
    <field name="company_id" ref="base.main_company" />
    <field name="default_debit_account_id"
           eval="ref('ol_base.{}_operating'.format(
                 ref('base.main_company')))" />
    <field name="default_credit_account_id"
           eval="ref('ol_base.{}_operating'.format(
                 ref('base.main_company')))" />
  </record>
  <record id="sale_journal_us" model="account.journal">
    <field name="name">Sales Journal</field>
    <field name="type">sale</field>
    <field name="code">SAJ</field>
    <field name="default_debit_account_id"
           eval="ref('ol_base.{}_products'.format(ref('base.main_company')))" />
    <field name="default_credit_account_id"
           eval="ref('ol_base.{}_products'.format(ref('base.main_company')))" />
    <field name="company_id" ref="base.main_company" />
    <!-- <field name="update_posted">True</field> -->
  </record>

  <record id="purchase_journal_us" model="account.journal">
    <field name="name">Purchase Journal</field>
    <field name="type">purchase</field>
    <field name="code">EXJ</field>
    <field name="company_id" ref="base.main_company"/>
  </record>

  <!-- Basic EU Journals -->
  <record id="operating_eu_eur" model="account.journal">
    <field name="name">Operating - EUR</field>
    <field name="type">bank</field>
    <field name="code">OPEUR</field>
    <field name="company_id" ref="ol_base.onlogic_eu" />
    <field name="default_debit_account_id"
           eval="ref('ol_base.{}_operating'.format(
                 ref('ol_base.onlogic_eu')))" />
    <field name="default_credit_account_id"
           eval="ref('ol_base.{}_operating'.format(
                 ref('ol_base.onlogic_eu')))" />
  </record>

  <record id="operating_eu_usd" model="account.journal">
    <field name="name">Operating - USD</field>
    <field name="type">bank</field>
    <field name="code">OPUSD</field>
    <field name="company_id" ref="ol_base.onlogic_eu" />
    <field name="default_debit_account_id"
           eval="ref('ol_base.{}_operating_foreign_currency'.format(
                 ref('ol_base.onlogic_eu')))" />
    <field name="default_credit_account_id"
           eval="ref('ol_base.{}_operating_foreign_currency'.format(
                 ref('ol_base.onlogic_eu')))" />
  </record>

  <record id="sale_journal_eu" model="account.journal">
    <field name="name">Sales Journal</field>
    <field name="type">sale</field>
    <field name="code">SAJ</field>
    <field name="default_debit_account_id"
           eval="ref('ol_base.{}_products'.format(ref('ol_base.onlogic_eu')))" />
    <field name="default_credit_account_id"
           eval="ref('ol_base.{}_products'.format(ref('ol_base.onlogic_eu')))" />
    <field name="company_id" ref="ol_base.onlogic_eu" />
    <!-- <field name="update_posted">True</field> -->
  </record>

  <record id="purchase_journal_exusd" model="account.journal">
    <field name="name">Purchase Journal</field>
    <field name="type">purchase</field>
    <field name="code">EXUSD</field>
    <field name="company_id" ref="ol_base.onlogic_eu"/>
  </record>

  <record id="purchase_journal_exeur" model="account.journal">
    <field name="name">Purchase Journal</field>
    <field name="type">purchase</field>
    <field name="code">EXEUR</field>
    <field name="company_id" ref="ol_base.onlogic_eu"/>
  </record>

  <record id="gains_losses_journal_eu" model="account.journal">
    <field name="name">Gains / Losses</field>
    <field name="type">general</field>
    <field name="code">CURGL</field>
    <field name="company_id" ref="ol_base.onlogic_eu"/>
  </record>
  <!-- Add gains/losses journal as EU currency journal -->
  <record id="ol_base.onlogic_eu" model="res.company">
    <field name="currency_exchange_journal_id" ref="ol_base.gains_losses_journal_eu"/>
  </record>

  <!-- ==================== -->
  <!-- Credit Card Journals -->
  <!-- ==================== -->

  <!-- US Journals -->

  <record id="credit_journal_us" model="account.journal">
    <field name="name">Credit Card Purchase US</field>
    <field name="type">bank</field>
    <field name="code">CC</field>
    <field name="default_debit_account_id"
           eval="ref('ol_base.{}_credit_card_payable'.format(ref('base.main_company')))" />
    <field name="default_credit_account_id"
           eval="ref('ol_base.{}_credit_card_payable'.format(ref('base.main_company')))" />
    <field name="company_id" ref="base.main_company"/>
  </record>

  <!-- EU Journals -->
  <record id="credit_journal_eu" model="account.journal">
    <field name="name">Credit Card Purchase EU</field>
    <field name="type">bank</field>
    <field name="code">CC</field>
    <field name="default_debit_account_id"
           eval="ref('ol_base.{}_credit_card_payable'.format(ref('ol_base.onlogic_eu')))" />
    <field name="default_credit_account_id"
           eval="ref('ol_base.{}_credit_card_payable'.format(ref('ol_base.onlogic_eu')))" />
    <field name="company_id" ref="ol_base.onlogic_eu"/>
  </record>


</odoo>
