<odoo>

    <record id="demo_settings" model="res.config.settings">
        <!-- CRM Settings -->
        <field name="group_use_lead">true</field>

        <!-- Sales Settings -->
        <field name="group_product_variant">true</field>
        <field name="group_uom">true</field>
        <field name="group_discount_per_so_line">true</field>
        <field name="group_product_pricelist">true</field>
        <field name="portal_confirmation_pay">true</field>
        <field name="group_sale_delivery_address">true</field>
        <field name="default_invoice_policy">delivery</field>
        <field name="quotation_validity_days">30</field>
        <field name="default_picking_policy">one</field>

        <!-- Purchase Settings -->
        <!-- None at the moment -->

        <!-- Inventory Settings -->
        <!-- TODO: this may not be a setting we want.  Investigate functionality -->
        <field name="stock_move_email_validation">true</field>
        <field name="group_stock_production_lot">true</field>
        <field name="group_stock_multi_locations">true</field>
        <field name="group_stock_adv_location">true</field>

        <!-- Manufacturing Settings -->
        <!-- None at the moment -->

        <!-- Invoicing Settings -->
        <!-- Remove default tax ids.  This is company-specific, but the EU company does not have any defaults to remove -->
        <field name="sale_tax_id" model="account.tax" search="[('id', '=', -1)]" />
        <field name="purchase_tax_id" model="account.tax" search="[('id', '=', -1)]" />

        <field name="use_invoice_terms">true</field>
        <field name="pay_invoices_online">true</field>
        <field name="group_multi_currency">true</field>
    </record>

    <!-- Apply the config -->
    <function model="res.config.settings" name="execute">
        <function eval="[[('id', '=', ref('demo_settings'))]]" model="res.config.settings" name="search" />
    </function>

</odoo>
