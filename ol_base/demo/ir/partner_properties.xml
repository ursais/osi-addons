<odoo>

    <!-- ============================= -->
    <!-- Partner Accounting Properties -->
    <!-- ============================= -->

    <!-- These properties are created without a `res_id`
          so they become the default property for the given field -->

    <!-- Field: res.partner.property_account_payable_id -->
    <record id="partner_payable_property_default_us" model="ir.property">
        <field name="fields_id" search="[('model', '=', 'res.partner'),('name', '=', 'property_account_payable_id')]" />
        <field name="name">property_account_payable_id</field>
        <field name="company_id" ref="base.main_company" />
        <field name="value_reference"
               eval="'account.account,{}'.format(
                      ref('ol_base.{}_payable'.format(
                      ref('base.main_company'))))" />
    </record>
    <record id="partner_payable_property_default_eu" model="ir.property">
        <field name="fields_id" search="[('model', '=', 'res.partner'),('name', '=', 'property_account_payable_id')]" />
        <field name="name">property_account_payable_id</field>
        <field name="company_id" ref="ol_base.onlogic_eu" />
        <field name="value_reference"
               eval="'account.account,{}'.format(
                     ref('ol_base.{}_payable'.format(
                     ref('ol_base.onlogic_eu'))))" />
       </record>

    <!-- Field: res.partner.property_account_receivable_id -->
    <record id="partner_receivable_property_default_us" model="ir.property">
        <field name="fields_id" search="[('model', '=', 'res.partner'),('name', '=', 'property_account_receivable_id')]" />
        <field name="name">property_account_receivable_id</field>
        <field name="company_id" ref="base.main_company" />
        <field name="value_reference"
               eval="'account.account,{}'.format(
                     ref('ol_base.{}_receivable'.format(
                     ref('base.main_company'))))" />
    </record>
    <record id="partner_receivable_property_default_eu" model="ir.property">
        <field name="fields_id" search="[('model', '=', 'res.partner'),('name', '=', 'property_account_receivable_id')]" />
        <field name="name">property_account_receivable_id</field>
        <field name="company_id" ref="ol_base.onlogic_eu" />
        <field name="value_reference"
               eval="'account.account,{}'.format(
                     ref('ol_base.{}_receivable'.format(
                     ref('ol_base.onlogic_eu'))))" />
    </record>

</odoo>
