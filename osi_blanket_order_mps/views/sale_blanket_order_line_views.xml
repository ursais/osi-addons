<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="blanket_order_line_inherit_tree_view" model="ir.ui.view">
        <field name="name">sale.blanket.order.inherit.tree</field>
        <field name="model">sale.blanket.order.line</field>
        <field
            name="inherit_id"
            ref="sale_blanket_order.sale_blanket_order_line_tree"
        />
        <field name="arch" type="xml">
            <field name="product_uom" position="after">
                <field name="partner_id" />
            </field>
        </field>
    </record>

    <record id="blanket_order_line_inherit_search" model="ir.ui.view">
        <field name="name">sale.blanket.order.line.inherit.search</field>
        <field name="model">sale.blanket.order.line</field>
        <field
            name="inherit_id"
            ref="sale_blanket_order.sale_blanket_order_line_search"
        />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="partner_id" />
            </field>
            <field name="date_schedule" position="after">
                <filter
                    name="group_partner"
                    string="Customer"
                    context="{'group_by': 'partner_id'}"
                />
                <filter
                    name="group_date_schedule"
                    string="Schedule Date"
                    context="{'group_by':'date_schedule'}"
                />
            </field>
        </field>
    </record>

</odoo>
