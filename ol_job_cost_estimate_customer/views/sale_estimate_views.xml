<odoo>

    <record
        id="ol_job_cost_estimator_customer_view_sale_estimate_form_job"
        model="ir.ui.view">
        <field name="name">sale.estimate.job.customer.inherit.form</field>
        <field name="model">sale.estimate.job</field>
        <field name="inherit_id"
            ref="job_cost_estimate_customer.view_sale_estimate_form_job" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='estimate_ids']/tree/field[@name='product_uom']"
                position="after">
                <field name="customer_lead" column_invisible="0" />
            </xpath>
            <xpath
                expr="//field[@name='labour_estimate_line_ids']/tree/field[@name='product_uom']"
                position="after">
                <field name="customer_lead" column_invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='overhead_estimate_line_ids']/tree/field[@name='product_uom']"
                position="after">
                <field name="customer_lead" column_invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>
