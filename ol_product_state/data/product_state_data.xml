<odoo>

    <record id="product_state.product_state_sellable" model="product.state">
        <field name="active">False</field>
    </record>
    <record id="product_state.product_state_obsolete" model="product.state">
        <field name="active">False</field>
    </record>

    <record id="product_state_pre_order" model="product.state">
        <field name="code">pre_order</field>
        <field name="name">Pre-Order</field>
        <field name="sequence">11</field>
    </record>

    <record id="product_state_active" model="product.state">
        <field name="code">active</field>
        <field name="name">Active</field>
        <field name="sequence">12</field>
    </record>

    <record id="product_state_discontinued" model="product.state">
        <field name="code">discontinued</field>
        <field name="name">Discontinued</field>
        <field name="sequence">13</field>
    </record>

    <record id="product_state_canceled" model="product.state">
        <field name="code">canceled</field>
        <field name="name">Canceled</field>
        <field name="sequence">31</field>
    </record>

    <!-- 'Can be' the setting on the state is 'Approved To' -->
    <record id="product_state.product_state_draft" model="product.state">
        <field name="approved_purchase" eval="True" />
        <field name="approved_sale" eval="False" />
        <field name="approved_sale_confirm" eval="False" />
        <field name="approved_mrp" eval="False" />
        <field name="approved_component_mrp" eval="False" />
        <field name="approved_bom" eval="False" />
        <field name="approved_ship" eval="False" />
    </record>

    <record id="ol_product_state.product_state_pre_order" model="product.state">
        <field name="approved_purchase" eval="True" />
        <field name="approved_sale" eval="True" />
        <field name="approved_sale_confirm" eval="True" />
        <field name="approved_mrp" eval="False" />
        <field name="approved_component_mrp" eval="False" />
        <field name="approved_bom" eval="True" />
        <field name="approved_ship" eval="False" />
    </record>

    <record id="ol_product_state.product_state_active" model="product.state">
        <field name="approved_purchase" eval="True" />
        <field name="approved_sale" eval="True" />
        <field name="approved_sale_confirm" eval="True" />
        <field name="approved_mrp" eval="True" />
        <field name="approved_component_mrp" eval="True" />
        <field name="approved_bom" eval="True" />
        <field name="approved_ship" eval="True" />
    </record>

    <record id="ol_product_state.product_state_discontinued" model="product.state">
        <field name="approved_purchase" eval="False" />
        <field name="approved_sale" eval="True" />
        <field name="approved_sale_confirm" eval="True" />
        <field name="approved_mrp" eval="True" />
        <field name="approved_component_mrp" eval="True" />
        <field name="approved_bom" eval="True" />
        <field name="approved_ship" eval="True" />
    </record>

    <record id="product_state.product_state_end" model="product.state">
        <field name="approved_purchase" eval="False" />
        <field name="approved_sale" eval="False" />
        <field name="approved_sale_confirm" eval="False" />
        <field name="approved_mrp" eval="True" />
        <field name="approved_component_mrp" eval="True" />
        <field name="approved_bom" eval="True" />
        <field name="approved_ship" eval="True" />
    </record>

    <record id="ol_product_state.product_state_canceled" model="product.state">
        <field name="approved_purchase" eval="False" />
        <field name="approved_sale" eval="False" />
        <field name="approved_sale_confirm" eval="False" />
        <field name="approved_mrp" eval="False" />
        <field name="approved_component_mrp" eval="False" />
        <field name="approved_bom" eval="False" />
        <field name="approved_ship" eval="False" />
    </record>

</odoo>
