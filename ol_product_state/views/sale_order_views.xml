<odoo>

    <record id="sale_order_line_inherit_state" model="ir.ui.view">
        <field name="name">sale_order_line_form_view_inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_product_approval.sale_order_line_inherit_form" />
        
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']//tree//button[hasclass('fa-exclamation-triangle')]"
                position="replace"
            >
                <button
                    invisible="approved_sale_confirm"
                    class="fa fa-exclamation-triangle"
                    title="Product has been marked as not saleable."
                />
            </xpath>
        </field>
    </record>
</odoo>