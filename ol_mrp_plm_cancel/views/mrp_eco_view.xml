<odoo>

    <!-- ECO Form View -->
    <record id="mrp_eco_view_form_cancel" model="ir.ui.view">
        <field name="name">mrp.eco.view.form</field>
        <field name="model">mrp.eco</field>
        <field name="inherit_id" ref="mrp_plm.mrp_eco_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='reject']" position="after">
                <button
                    string="Cancel"
                    name="action_cancel"
                    type="object"
                    class="btn_secondary"
                    invisible="state in ('done','cancel')"
                    groups="mrp_plm.group_plm_user"
                    confirm="Are you sure you want to cancel this Engineering Change Request?"
                />
            </xpath>
            <field name="tag_ids" position="after">
                <field name="initial_product_state_id" readonly="1" force_save="1" />
                <field name="current_product_state_id" />
            </field>
        </field>
    </record>

</odoo>
