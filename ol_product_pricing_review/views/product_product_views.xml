<odoo>

    <!-- product.product_normal_form_view -->
    <record id="ol_product_pricing_review_product_normal_form_view" model="ir.ui.view">
        <field name="name">product.product.form</field>
        <field name="model">product.product</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_pricelist_rules']" position="after">
                <button class="oe_stat_button" name="action_view_price_reviews" type="object" groups="ol_product_pricing_review.group_pricing_review_user" invisible="type not in ['product', 'consu']" icon="fa-flask">
                    <field string="Price Reviews" name="price_review_count" widget="statinfo" />
                </button>
            </xpath>
            <xpath expr="//header" position="inside">
                <field name="disable_price_reviews" invisible="1" />
                <button string="Price Review" type="object" name="action_price_review" invisible="disable_price_reviews or has_configurable_attributes" />
            </xpath>
        </field>
    </record>

    <record id="product_open_price_review" model="ir.actions.act_window">
        <field name="context">{'default_product_id': active_id}</field>
        <field name="name">Price Reviews</field>
        <field name="res_model">product.price.review</field>
        <field name="domain">[]</field> <!-- Force empty -->
    </record>

</odoo>
