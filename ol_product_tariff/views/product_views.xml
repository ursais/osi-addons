<odoo>

    <!-- Add it to the template view -->
    <record id="ol_product_tariff_product_template_form_view" model="ir.ui.view">
        <field name="name">ol_product_tariff.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="categ_id" position="before">
                <field name="tariff_code_id" readonly="0" />
            </field>
        </field>
    </record>

    <!-- Product variant form view -->
    <record model="ir.ui.view" id="ol_product_tariff_product_normal_form_view">
        <field name="name">ol_product_tariff.product.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <div name="standard_price_uom" position="after">
                <field name="tariff_percent" readonly="1" widget="percentage" />
            </div>
        </field>
    </record>

</odoo>
