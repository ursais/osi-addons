<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Product variant form view -->
    <record model="ir.ui.view" id="product_template_form_view_inhiert_tariff">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Add shipping type and calculated cost -->
            <div name="standard_price_uom" position="after">
                <field name="tariff_percent" readonly="1"/>
            </div>
        </field>
    </record>

</odoo>
