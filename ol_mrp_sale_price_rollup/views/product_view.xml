<odoo>

    <record id="product_template_ext_form_view_sale_price" model="ir.ui.view">
        <field name="name">product.template.ext.form.view.sale.price</field>
        <field name="model">product.template</field>
        <field name="priority">99</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pricing']" position="inside">
                <field name="bom_count" invisible="1" />
                <field name="has_configurable_attributes" invisible="1" />
                <button
                    name="button_bom_sale_price"
                    string="Compute Sales Price from BoM"
                    type="object"
                    invisible="bom_count == 0 or has_configurable_attributes or not config_ok"
                    help="Compute the sales price of the product using products and operations of related bill of materials, for manufactured products only."
                    class="oe_link pt-0"
                    colspan="2"
                    groups="base.group_no_one"
                />
            </xpath>
        </field>
    </record>

    <record id="product_product_ext_form_view_sale_price" model="ir.ui.view">
        <field name="name">product.product.ext.form.view.sale.price</field>
        <field name="model">product.product</field>
        <field name="priority">99</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pricing']" position="inside">
                <field name="bom_count" invisible="1" />
                <field name="has_configurable_attributes" invisible="1" />
                <button
                    name="button_bom_sale_price"
                    string="Compute Sales Price from BoM"
                    type="object"
                    invisible="not config_ok"
                    help="Compute the sales price of the product using products and operations of related bill of materials, for manufactured products only."
                    class="oe_link pt-0"
                    colspan="2"
                    groups="base.group_no_one"
                />
            </xpath>
            <xpath expr="//field[@name='taxes_id']" position="before">
                <field name="price_extra" readonly="1" />
                <field name="bom_lst_price" readonly="1" />
            </xpath>
        </field>
    </record>

    <record id="product_product_ext_form_view_sale_price_easy_edit" model="ir.ui.view">
        <field name="name">product.product.ext.form.view.sale.price.easy.edit</field>
        <field name="model">product.product</field>
        <field name="priority">99</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lst_price']" position="after">
                <field name="bom_count" invisible="1" />
                <field name="has_configurable_attributes" invisible="1" />
                <field name="product_tmpl_id" invisible="1" />
                <field name="config_ok" invisible="1" />
                <button
                    name="button_bom_sale_price"
                    string="Compute Sales Price from BoM"
                    type="object"
                    invisible="not config_ok"
                    help="Compute the sales price of the product using products and operations of related bill of materials, for manufactured products only."
                    class="oe_link pt-0"
                    colspan="2"
                    groups="base.group_no_one"
                />
            </xpath>
            <xpath expr="//group[@name='pricing']//div[field[@name='lst_price']]" position="after">
                <label for="price_extra"/>
                <div class="o_row">
                    <field name="price_extra" readonly="1" />
                </div>
                <label for="bom_lst_price"/>
                <div class="o_row">
                    <field name="bom_lst_price" readonly="1" />
                </div>
            </xpath>
        </field>
    </record>

</odoo>
