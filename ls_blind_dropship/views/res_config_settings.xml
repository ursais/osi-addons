<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.ls_blind_dropship</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30" />
        <field name="inherit_id" ref="ls_base.res_config_settings_view_form_stock" />
        <field name="arch" type="xml">
            <div name="onlogic_stock_settings" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="blind_drop_ship_product_id" />
                        <div class="text-muted">
                            Product to indicate blind drop shipping
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field
                                    name="blind_drop_ship_product_id"
                                    class="o_light_label"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
