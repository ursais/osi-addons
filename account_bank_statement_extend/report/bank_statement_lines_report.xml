<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="bank_statement_line_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <head>
                        </head>
                        <style>
                                thead,tr,td {border: 1px solid black;},
                                th {color: #0c0c0c;}
                        </style>
                        <h2>Bank Statement Report</h2>
                        <h6>From :- <span t-esc="o.date_from" />
                        </h6>
                        <h6>To :- <span t-esc="o.date_to" />
                        </h6>
                        <h6>Report Generated Date : <span
                                t-esc="o.create_date.date()"
                            />
                        </h6>
                        <h6>Report Generated By : <span
                                t-esc="o.user_id.name"
                            />
                        </h6>

                        <!-- <table class="table table-lg m-0 table-borderless border border-right-0 border-left-0 border-info">
                                <tbody>
                                    <tr>
                                        <td > -->
                                            <table
                            class="table table-borderless m-0"
                        >
                                                <tr>
                                                    <td>
                                                        <strong
                                    >Starting Balance</strong>
                                                        <br />
                                                    </td>
                                                    <td>
                                                        <strong>
                                                            <span
                                            t-esc="o.get_starting_balance()"
                                        />
                                                        </strong>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <strong
                                    >Ending Balance</strong>
                                                    </td>
                                                    <td>
                                                        <strong>
                                                            <span
                                            t-esc="o.get_ending_balance()"
                                        />
                                                        </strong>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <strong
                                    >Transection Amount</strong>
                                                    </td>
                                                    <td>
                                                        <strong>
                                                            <span
                                            t-esc="o.get_total_transection_amt()"
                                        />
                                                        </strong>
                                                    </td>
                                                </tr>
                                            </table>
                                        <!-- </td>
                                    </tr>
                                </tbody>
                            </table> -->


                        <table
                            class="table"
                            style="border: 1px solid black;margin-top: 50px;border-top:1px solid black;"
                        >
                            <thead>
                                <tr style="border: 1px solid black;">
                                    <th
                                        style="color: #0c0c0c;"
                                    >Serial Number</th>
                                    <th style="color: #0c0c0c;">Date</th>
                                    <th style="color: #0c0c0c;">Account</th>
                                    <th style="color: #0c0c0c;">Partner</th>
                                    <th style="color: #0c0c0c;">Statement</th>
                                    <th style="color: #0c0c0c;">Entry</th>
                                    <th style="color: #0c0c0c;">Reference</th>
                                    <th
                                        style="color: #0c0c0c;"
                                    >Matching Number</th>
                                    <th style="color: #0c0c0c;">Debit</th>
                                    <th style="color: #0c0c0c;">Credit</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="docs" t-as="o">
                                    <t t-set="i" t-value="1" />
                                    <tr
                                        t-foreach="o.get_bank_statement_report_data()"
                                        t-as="datas"
                                    >
                                        <tr t-foreach="datas" t-as="line">
                                            <td>
                                                <span t-esc="i" />
                                            </td>
                                            <td>
                                                <span
                                                    t-esc="line.get('date')"
                                                />
                                            </td>
                                            <td>
                                                <span
                                                    t-esc="line.get('account_id')"
                                                />
                                            </td>
                                            <td>
                                                <span
                                                    t-esc="line.get('partner_id')"
                                                />
                                            </td>
                                            <td><span
                                                    t-esc="line.get('statement_id')"
                                                /></td>
                                            <td>
                                                <span
                                                    t-esc="line.get('move_id')"
                                                />
                                            </td>
                                            <td>
                                                <span t-esc="line.get('ref')" />
                                            </td>
                                            <td>
                                               <span
                                                    t-esc="line.get('matching_number')"
                                                />
                                            </td>
                                            <td>
                                                 <span
                                                    t-esc="line.get('debit')"
                                                />
                                            </td>
                                            <td>
                                                <span
                                                    t-esc="line.get('credit')"
                                                />
                                            </td>
                                            <t t-set="i" t-value="i+1" />
                                        </tr>
                                        </tr>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_bank_statement_wiz_report" model="ir.actions.report">
        <field name="name">Bank Statement Lines</field>
        <field name="model">report.bank.statement</field>
        <field name="report_type">qweb-pdf</field>
        <field
            name="report_name"
        >account_bank_statement_extend.bank_statement_line_report_template</field>
        <field
            name="report_file"
        >account_bank_statement_extend.bank_statement_line_report_template</field>
    </record>

</odoo>
