<odoo>

    <record id="view_purchase_request_form_inherit" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_qty']" position="before">
                <field name="specifications" optional="show" />
            </xpath>
            <xpath expr="//field[@name='estimated_cost']" position="after">
                <field name="purchase_cost" optional="show" />
            </xpath>
            <button name="action_view_stock_picking" position="after">
                <button
                    type="object"
                    name="action_view_estimate"
                    class="oe_stat_button"
                    invisible="estimate_count == 0"
                    icon="fa-list"
                >
                    <field name="estimate_count" widget="statinfo" string="Estimate(s)" />
                </button>
            </button>
        </field>
    </record>

</odoo>
